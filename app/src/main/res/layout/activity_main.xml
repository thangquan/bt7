<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/br"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/te"
        android:layout_width="255dp"
        android:layout_height="66dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:text="Nguyễn Hữu Thắng 1811505310339"
        android:textColor="#000"
        android:textSize="25dp"
        android:gravity="center_horizontal" />

    <RelativeLayout
        android:id="@+id/DangNhap"
        android:layout_below="@id/te"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/TextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textColor="#000"
            android:textSize="25dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:drawableLeft="@drawable/icons_email"
            android:hint="  Nhập Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView2"
            android:layout_marginTop="20dp"
            android:ems="30"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:drawableLeft="@drawable/icons_pass"
            android:hint="  Nhập PassWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextTextEmailAddress"
            android:layout_marginTop="25dp"
            android:ems="30"
            android:inputType="textPassword" />
        <Button
            android:layout_below="@id/editTextTextPassword"
            android:id="@+id/ButtonSignIn"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="@drawable/bt"
            />

        <Button
            android:id="@+id/ButtonSignUp"
            android:layout_width="180dp"
            android:layout_height="37dp"
            android:layout_below="@id/ButtonSignIn"
            android:layout_marginTop="20dp"
            android:background="@drawable/bt2"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="#F5F7F8"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</RelativeLayout>